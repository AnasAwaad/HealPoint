@model ServiceDto

<tr>
    <td class="ps-2">

        <div class="d-flex align-items-center">
            <div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
                <a href="#">
                    <div class="symbol-label">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/services/default-service.png" : Model.ImageUrl)"
                             alt="@Model.Name"
                             class="w-100"
                             onerror="this.onerror=null;this.src='/images/default/default-clinic.png';" />
                    </div>
                </a>
            </div>
            <div class="d-flex flex-column">
                <a href="#" class="text-gray-800 text-hover-primary mb-1">@Model.Name</a>
            </div>
        </div>
    </td>
	<td>@(Model.Description.Length > 30 ? $"{Model.Description.Substring(0, 30)}...":Model.Description)</td>
	<td>@Model.CreatedOn.ToString("dddd, dd MMMM yyyy")</td>
	<td class="js-last-updated-on">@(Model.LastUpdatedOn.HasValue ? Model.LastUpdatedOn.Value.ToString("dddd, dd MMMM yyyy") : "-")</td>
	<td class="js-status">
		<span class="badge badge-@(Model.IsDeleted ? "warning" : "success")">@(Model.IsDeleted ? "Inactive" : "Active")</span>
	</td>
    <td class="text-center">
        <div class="dropdown">
            <button class="btn btn-sm btn-light shadow-sm rounded-circle" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-three-dots-vertical fs-5 text-dark"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm animate__animated animate__fadeIn"
                aria-labelledby="dropdownMenuButton1">
                <li>
                    <a class="dropdown-item d-flex align-items-center js-render-modal"
                       href="javascript:;"
                       data-url="/Services/Update/@Model.Id"
                       data-title="Update Service"
                       data-update="true">
                        <i class="ki-duotone ki-notepad-edit fs-5 text-success me-2">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <span>Update</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center js-change-status text-danger"
                       data-status="true"
                       data-url="/Services/ChangeServiceStatus/@Model.Id"
                       href="javascript:;">
                        <i class="bi bi-x-circle fs-5 me-2"></i>
                        <span>Change Status</span>
                    </a>
                </li>
            </ul>
        </div>
    </td>

</tr>