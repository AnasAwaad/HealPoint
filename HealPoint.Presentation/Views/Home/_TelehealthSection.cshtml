@model HomeViewModel

<section class="py-5 testimonial_wrapper telehealth-section">

    <div class="container my-5">
        <h4 class="mb-4 font-weight-bold">Telehealth visit</h4>

        <div class="d-flex align-items-center mb-4">
            <button class="btn-toggle mr-2">Within 2 hours</button>
        </div>

        <div class="owl-carousel testimonial_slider">
            @foreach (var doctor in Model.Doctors)
            {
                <div class="testimonial_item">
                    <div class="card-doctor shadow-sm bg-white">
                        <h6 class="mb-0 text-black font-weight-bold card-title">@doctor.FullName</h6>

                        <div class="d-flex align-items-center mb-2">

                            <div class="position-relative mr-3">
                                <img src="@doctor.ProfilePhotoUrl" alt="Dr." class="doctor-img">
                                <span class="video-icon"><img src="https://img.icons8.com/ios-filled/20/000000/video-call.png" /></span>
                            </div>
                            <div>
                                <div class=" ">
                                    <span class="stars text-warning ">★★★★★</span>
                                    <strong class="font-weight-bold text-black">@doctor.Rating</strong>
                                    <span class="num-patients">(@doctor.TotalReviews)</span>
                                </div>
                                <div class="text-muted">@doctor.Specialization</div>
                                @if (doctor.AvailableToday)
                                {
                                    <span class="badge badge-available">Available today</span>
                                }
                                <span class="badge badge-highlight">Highly rated</span>
                            </div>
                        </div>
                        <div>
                            @doctor.Description
                        </div>
                        <hr />
                        <div class="mt-3">
                            <div class="d-flex justify-content-between">
                                <strong>Wed, Jul 9</strong>
                                <p class="mb-1">
                                    <strong>Price : </strong><span class="text-success">@doctor.Price</span>
                                </p>
                            </div>

                            <div class="d-flex flex-wrap">
                                @foreach(var time in doctor.AvailableTimes)
                                {
                                    <button class="btn btn-sm btn-time mr-2 mb-2">@time</button>
                                }
                                <button class="btn btn-sm btn-outline-secondary mb-2 btn-more-times">More times</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>

</section>