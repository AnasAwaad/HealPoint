@using HealPoint.DataAccess.Enums
@model DoctorCardDto

<div class="testimonial_item">
    <a asp-controller="Doctors" asp-action="Details" asp-route-id="@Model.Id">
        <div class="card-doctor shadow-sm bg-white">
            <h6 class="text-black font-weight-bold doctor-name">@Model.FullName</h6>
            @if (Model.OperationMode == DoctorOperationMode.InPerson)
            {
                <div class="clinic-address">@Model.ClinicAddress</div>
            }
            <div class="d-flex align-items-center mb-2">

                <div class="position-relative mr-3">
                    <img src="@Model.ProfilePhotoUrl" alt="Dr." class="doctor-img">
                    <span class="video-icon"><img src="https://img.icons8.com/ios-filled/20/000000/video-call.png" /></span>
                </div>
                <div>
                    <div >
                        <span class="stars text-warning ">★★★★★</span>
                        <strong class="font-weight-bold text-black">@Model.Rating</strong>
                        <span class="num-patients">(@Model.TotalReviews)</span>
                    </div>
                    <div class="text-muted">@Model.Specialization</div>
                    @if (Model.AvailableToday)
                    {
                        <span class="badge badge-available">Available today</span>
                    }
                    <span class="badge badge-highlight">Highly rated</span>
                </div>
            </div>
            <div>
                @Model.Description
            </div>
            <hr />
            <div class="mt-3">
                <div class="d-flex justify-content-between">
                    <strong>Wed, Jul 9</strong>
                    <p class="mb-1">
                        <strong>Price : </strong><span class="text-success">@Model.Price</span>
                    </p>
                </div>

                <div class="d-flex flex-wrap">
                    @foreach (var time in Model.AvailableTimes)
                    {
                        <button class="btn btn-sm btn-time mr-2 mb-2">@time</button>
                    }
                    <button class="btn btn-sm btn-outline-secondary mb-2 btn-more-times">More times</button>
                </div>
            </div>
        </div>
    </a>
   
</div>