@model CategoryFormDto

@{
	ViewData["Title"] = $"{(Model?.Id > 0 ? "Update":"Create")} Category";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(Model?.Id > 0 ?"Update":"Create") Category</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Categories" asp-action="@(Model?.Id > 0 ?"Update":"Create")">
            @if(Model?.Id > 0)
            {
                <input type="hidden" asp-for="Id" />
            }
            <!--begin::Input group-->
            <div class="row mb-5">
                <div class="col-md-6">
                    <div class="form-floating mb-2">
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name" />
                        <label asp-for="Name"></label>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="row mb-5">
                <div class="col-md-6">
                    <div class="form-floating mb-2">
                        <input asp-for="Description" type="text" class="form-control" placeholder="Description" />
                        <label asp-for="Description"></label>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            </div>
            <!--end::Input group-->
            <button class="btn btn-primary" type="submit">Save</button>

        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}