@model IEnumerable<TimeSlotDto>

@if (Model == null || !Model.Any())
{
    <div class="text-muted">No time slots available for this day.</div>
}
else
{
    <ul class="list-group">
        @foreach (var slot in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    <strong>From:</strong> @slot.StartTime.ToString("hh\\:mm")
                    <strong>To:</strong> @slot.EndTime.ToString("hh\\:mm")
                </span>
                <button class="btn btn-sm btn-danger js-delete-slot" data-id="@slot.Id">Delete</button>
            </li>
        }
    </ul>
}