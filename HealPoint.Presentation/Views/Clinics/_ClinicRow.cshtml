@model ClinicListDto
<tr id="clinicRow_@Model.Id">
    <td class="text-center">@Html.DisplayFor(modelItem => Model.Name)</td>
    <td>@Html.DisplayFor(modelItem => Model.Email)</td>
    <td>@Html.DisplayFor(modelItem => Model.ContactNumber)</td>
    <td>@Html.DisplayFor(modelItem => Model.Speciality)</td>
    <td>@Html.DisplayFor(modelItem => Model.ClinicAdmin)</td>
    <td>@Html.DisplayFor(modelItem => Model.Description)</td>
    <td>
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Clinic Image" style="max-width: 50px; max-height: 50px;" />
        }
        else
        {
            <span>No Image</span>
        }
    </td>
    <td>
        <div class="form-check form-switch">
            <input class="form-check-input status-toggle" type="checkbox"
                   id="statusSwitch_@Model.Id"
                   data-clinic-id="@Model.Id"
            @if (Model.Status)
            {
                <text>checked</text>
            }>
            <label class="form-check-label" for="statusSwitch_@Model.Id">
                <span class="status-text_@Model.Id">@(Model.Status ? "Active" : "Inactive")</span>
            </label>
        </div>
        
    </td>
    <td class="text-center">
        <a href="javascript:;" data-url="@Url.Action("Update", "Clinics", new { id = Model.Id })" data-title="Edit Clinic" class="btn btn-sm btn-light-primary js-render-modal me-2">Edit</a>
        <button type="button" class="btn btn-sm btn-light-danger delete-clinic-btn" data-id="@Model.Id">Delete</button>
    </td>
</tr>