@model DoctorDto

<tr>
	<td class="d-flex align-items-center">
		<div class="symbol symbol-circle symbol-45px me-3">
			<img src="@(Model.ProfilePhotoPath ?? "/images/doctors/default-doctor.jpg" )" alt="photo" />
		</div>
		<div class="d-flex flex-column">
			<span class="fw-bold text-gray-800 fs-6">Dr. @Model.FirstName @Model.LastName</span>
		</div>
	</td>

	<td>@Model.SpecializationName</td>
	<td>
		<span class="badge badge-@(Model.IsDeleted ? "warning" : "success")">@(Model.IsDeleted ? "Inactive" : "Active")</span>
	</td>
	<td class="fw-bold text-gray-800">@Model.NumOfpations</td>
	<td class="fw-bold text-gray-800">@Model.YearOfExperience years</td>
	<td>
		<div class="d-flex flex-column">
			<a href="mailto:@Model.Email" class="text-primary text-hover-dark fw-semibold">@Model.Email</a>
			<span class="text-muted">@Model.PhoneNumber</span>
		</div>
	</td>

    <td class="text-center">
        <div class="dropdown">
            <button class="btn btn-sm btn-icon btn-light btn-active-color-primary" data-bs-toggle="dropdown">
                <i class="bi bi-three-dots-vertical fs-4"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item js-render-modal"
                       href="javascript:;"
                       data-url="/Doctors/Update/@Model.Id"
                       data-title="Update Doctor"
                       data-update="true">
                        <i class="ki-duotone ki-notepad-edit text-success me-2"></i> Update
                    </a>
                </li>
                <li>
                    <a class="dropdown-item js-delete-item text-danger"
                       href="javascript:;"
                       data-url="/Doctors/DeleteDoctor/@Model.Id"
                       data-kt-ecommerce-model-filter="delete_row">
                        <i class="ki-duotone ki-trash-square me-2"></i> Delete
                    </a>
                </li>
            </ul>
        </div>
    </td>
</tr>