@model UserResetPasswordDto

<form id="ModalForm" asp-action="ResetPassword"
	  data-ajax="true"
	  data-ajax-method="POST"
	  data-ajax-success="onResetPasswordFormSuccess"
	  data-ajax-failure="onResetPasswordFormFailure">

	@if (!string.IsNullOrEmpty(Model.Id))
	{
		<input type="hidden" asp-for="Id" />
	}
	

	<div class="form-floating mb-3">
		<input asp-for="Password" class="form-control" placeholder="first name">
		<label asp-for="Password"></label>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="form-floating mb-3">
		<input asp-for="ConfirmPassword" class="form-control" placeholder="first name">
		<label asp-for="ConfirmPassword"></label>
		<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
	</div>
</form>