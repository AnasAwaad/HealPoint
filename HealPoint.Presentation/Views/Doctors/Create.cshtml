@model CreateDoctorDto

@{
	ViewData["Title"] = "Create Doctor";
}

<div class="d-flex flex-column flex-column-fluid" style="margin-top:30px;">

	<!--begin::Content-->
	<div id="kt_app_content" class="app-content  flex-column-fluid ">
		<!--begin::Content container-->
		<div id="kt_app_content_container">
			<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 mb-4 ">
				<!--begin::Title-->
				<h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
					Doctors
				</h1>
				<!--end::Title-->
				<!--begin::Breadcrumb-->
				<ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
					<!--begin::Item-->
					<li class="breadcrumb-item text-muted">
						<a href="/" class="text-muted text-hover-primary">
							Home
						</a>
					</li>
					<!--end::Item-->
					<!--begin::Item-->
					<li class="breadcrumb-item">
						<span class="bullet bg-gray-500 w-5px h-2px"></span>
					</li>
					<!--end::Item-->

					<li class="breadcrumb-item text-muted">
						<a href="/Doctors/Index" class="text-muted text-hover-primary">
							Doctors
						</a>
					</li>

					<li class="breadcrumb-item">
						<span class="bullet bg-gray-500 w-5px h-2px"></span>
					</li>
					<!--end::Item-->
					<!--begin::Item-->
					<li class="breadcrumb-item text-muted">
						Create Doctor
					</li>

				</ul>
				<!--end::Breadcrumb-->
			</div>
			<!--begin::Doctor-->
			<form class="form d-flex flex-column flex-lg-row fv-plugins-bootstrap5 fv-plugins-framework" method="post" asp-action="Create" enctype="multipart/form-data">
				<!--begin::Main column-->
				<div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
					<!--begin:::Tabs-->
					<ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-semibold mb-n2" role="tablist">
						<!--begin:::Tab item-->
						<li class="nav-item" role="presentation">
							<a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab" href="#add_doctor_PersonalInformation" aria-selected="true" role="tab">Personal Information</a>
						</li>
						<!--end:::Tab item-->
						<!--begin:::Tab item-->
						<li class="nav-item" role="presentation">
							<a class="nav-link text-active-primary pb-4" data-bs-toggle="tab" href="#add_doctor_ProfessionalDetails" aria-selected="false" role="tab" tabindex="-1">Professional Details</a>
						</li>
						<!--end:::Tab item-->
						<!--begin:::Tab item-->
						<li class="nav-item" role="presentation">
							<a class="nav-link text-active-primary pb-4" data-bs-toggle="tab" href="#add_doctor_AccountSettings" aria-selected="false" role="tab" tabindex="-1">Account Settings</a>
						</li>
						<!--end:::Tab item-->
					</ul>
					<!--end:::Tabs-->
					<!--begin::Tab content-->
					<div class="tab-content">
						<!--begin::Tab pane-->
						<div class="tab-pane fade active show" id="add_doctor_PersonalInformation" role="tab-panel">
							<div class="d-flex flex-column gap-7 gap-lg-10">
								<!--begin::General options-->
								<div class="card card-flush py-4">
									<!--begin::Card header-->
									<div class="card-header">
										<div class="card-title">
											<h2>Personal Information</h2>
										</div>
									</div>
									<!--end::Card header-->
									<!--begin::Card body-->
									<div class="card-body pt-0">
										<div class="row mb-7">
											<div class="col-md-6">
												<!--begin::Label-->
												<label class="d-block fw-semibold fs-6 mb-5">Profile Photo</label>
												<!--end::Label-->
												<!--begin::Image placeholder-->
												<style>
													.image-input-placeholder {
														background-image: url('/images/blank-image.svg');
													}

													[data-bs-theme="dark"] .image-input-placeholder {
														background-image: url('/images/blank-image-dark.svg');
													}</style>
												<!--end::Image placeholder-->
												<!--begin::Image input-->
												<div class="image-input image-input-outline image-input-placeholder image-input-empty" data-kt-image-input="true">
													<!--begin::Preview existing avatar-->
													<div class="image-input-wrapper w-125px h-125px" style="background-image: none;"></div>
													<!--end::Preview existing avatar-->
													<!--begin::Label-->
													<label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" aria-label="Change avatar" data-bs-original-title="Change avatar" data-kt-initialized="1">
														<i class="ki-duotone ki-pencil fs-7">
															<span class="path1"></span>
															<span class="path2"></span>
														</i>
														<!--begin::Inputs-->
														<input asp-for="ImageFile" type="file" accept=".png, .jpg, .jpeg">
														<input type="hidden" name="avatar_remove" value="1">
														<!--end::Inputs-->
													</label>
													<!--end::Label-->
													<!--begin::Cancel-->
													<span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" aria-label="Cancel avatar" data-bs-original-title="Cancel avatar" data-kt-initialized="1">
														<i class="ki-duotone ki-cross fs-2">
															<span class="path1"></span>
															<span class="path2"></span>
														</i>
													</span>
													<!--end::Cancel-->
													<!--begin::Remove-->
													<span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" aria-label="Remove avatar" data-bs-original-title="Remove avatar" data-kt-initialized="1">
														<i class="ki-duotone ki-cross fs-2">
															<span class="path1"></span>
															<span class="path2"></span>
														</i>
													</span>
													<!--end::Remove-->
												</div>
												<!--end::Image input-->
												<!--begin::Hint-->
												<div class="form-text">Allowed file types: png, jpg, jpeg.</div>
												<!--end::Hint-->
											</div>

											<div class="col-md-6 mb-5 g-5">
												<div class="col-row mb-5 fv-row fv-plugins-icon-container">
													<label asp-for="FirstName" class="form-label "></label>
													<input asp-for="FirstName" class="form-control form-control-solid" placeholder="Enter first name">
													<span asp-validation-for="FirstName" class="text-danger"></span>
												</div>
												<div class="col-row fv-row fv-plugins-icon-container">
													<label asp-for="LastName" class="form-label "></label>
													<input asp-for="LastName" class="form-control form-control-solid" placeholder="Enter last name">
													<span asp-validation-for="LastName" class="text-danger"></span>
												</div>
											</div>
										</div>
										
										<div class="row mb-5 g-5">
											<div class="col-md-6 fv-row fv-plugins-icon-container">
												<label asp-for="DateOfBirth" class="form-label "></label>
												<input asp-for="DateOfBirth" class="form-control form-control-solid">
												<span asp-validation-for="DateOfBirth" class="text-danger"></span>
											</div>
											<div class="col-md-6 fv-row fv-plugins-icon-container">
												<label class="form-label" asp-for="Gender"></label>
												<select asp-for="Gender" class="form-select form-select-solid" data-control="select2" data-placeholder="Select gender">
													<option value=""></option>
													<option value="Male">Male</option>
													<option value="Male">Female</option>
												</select>
												<span asp-validation-for="Gender" class="text-danger"></span>
											</div>
										</div>

										<div class="mb-5 fv-row fv-plugins-icon-container">
											<label asp-for="Address" class="form-label "></label>
											<textarea rows="3" asp-for="Address" class="form-control form-control-solid" placeholder="Enter address">
											</textarea>
											<span asp-validation-for="Address" class="text-danger"></span>
										</div>

										<div class="row mb-5">
											<div class="col-md-4 fv-row fv-plugins-icon-container">
												<label asp-for="Country" class="form-label"></label>
												<input asp-for="Country" class="form-control form-control-solid" placeholder="Enter zip code">
												<span asp-validation-for="Country" class="text-danger" />
											</div>
											<div class="col-md-4 fv-row fv-plugins-icon-container">
												<label asp-for="City" class="form-label "></label>
												<input asp-for="City" class="form-control form-control-solid" placeholder="Enter City">
												<span asp-validation-for="City" class="text-danger"></span>
											</div>
											<div class="col-md-4 fv-row fv-plugins-icon-container">
												<label asp-for="State" class="form-label"></label>
												<input asp-for="State" class="form-control form-control-solid" placeholder="Enter state">
												<span asp-validation-for="State" class="text-danger" />
											</div>
										</div>

										<hr class=" border-gray-800 w-100">

										<div class="mt-4">
											<h2 class="text-lg font-medium mb-4">Contact Information</h2>
											<div class="row mb-5 g-5">
												<div class="col-md-6 fv-row fv-plugins-icon-container">
													<label asp-for="ContactEmail" class="form-label "></label>
													<input asp-for="ContactEmail" type="email" class="form-control form-control-solid" placeholder="Enter email">
													<span asp-validation-for="ContactEmail" class="text-danger"></span>
												</div>
												<div class="col-md-6 fv-row fv-plugins-icon-container">
													<label class="form-label" asp-for="PhoneNumber"></label>
													<input asp-for="PhoneNumber" type="text" class="form-control form-control-solid" placeholder="Enter phonenumber">
													<span asp-validation-for="PhoneNumber" class="text-danger"></span>
												</div>
											</div>
											<div class="row mb-5 g-5">
												<div class="col-md-6 fv-row fv-plugins-icon-container">
													<label asp-for="EmergencyContactName" class="form-label "></label>
													<input asp-for="EmergencyContactName" class="form-control form-control-solid" placeholder="Enter emergency contact name">
													<span asp-validation-for="EmergencyContactName" class="text-danger"></span>
												</div>
												<div class="col-md-6 fv-row fv-plugins-icon-container">
													<label asp-for="EmergencyContactPhone" class="form-label "></label>
													<input asp-for="EmergencyContactPhone" class="form-control form-control-solid" placeholder="Enter emergency contact phone">
													<span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
												</div>
												
											</div>
										</div>
									</div>
									<!--end::Card header-->
								</div>
								<!--end::General options-->
							</div>
							<!-- Personal Info Tab -->
							<div class="d-flex justify-content-end mt-5">
								<button type="button" id="btnToProfessionalDetails" class="btn btn-primary">Next</button>
							</div>
						</div>
						<!--end::Tab pane-->
						<!--begin::Tab pane-->
						<div class="tab-pane fade" id="add_doctor_ProfessionalDetails" role="tab-panel">
							<div class="d-flex flex-column gap-7 gap-lg-10">
								<!--begin::Inventory-->
								<div class="card card-flush py-4">
									<!--begin::Card header-->
									<div class="card-header">
										<div class="card-title">
											<h2>Professional Details</h2>
										</div>
									</div>
									<!--end::Card header-->
									<!--begin::Card body-->
									<div class="card-body pt-0">
										<div class="card-body p-0">
											<div class="col-md-6 fv-row fv-plugins-icon-container">
												<label class="form-label" asp-for="SpecializationId"></label>
												<select asp-for="SpecializationId" asp-items="Model.SpecializationSelectList" class="form-select form-select-solid" data-control="select2" data-placeholder="Select specialization">
													<option value=""></option>
												</select>
												<span asp-validation-for="SpecializationId" class="text-danger"></span>
											</div>

											<div class="row g-5">
												<div class="col-md-6 fv-row fv-plugins-icon-container">
													<label asp-for="MedicalLicenseNumber" class="form-label"></label>
													<input asp-for="MedicalLicenseNumber" class="form-control form-control-solid" placeholder="Country"></input>
													<span asp-validation-for="MedicalLicenseNumber" class="text-danger" />
												</div>
												<div class="col-md-6 fv-row fv-plugins-icon-container">
													<label asp-for="LicenseExpiryDate" class="form-label"></label>
													<input asp-for="LicenseExpiryDate" class="form-control form-control-solid" placeholder="State"></input>
													<span asp-validation-for="LicenseExpiryDate" class="text-danger" />
												</div>
											</div>

											<div class="mb-5 fv-row fv-plugins-icon-container">
												<label asp-for="Qualifications" class="form-label "></label>
												<textarea rows="3" asp-for="Qualifications" class="form-control form-control-solid" placeholder="Enter qualifications (MD, PhD, etc.)">
												</textarea>
												<span asp-validation-for="Qualifications" class="text-danger"></span>
											</div>

											<div class="mb-5 fv-row fv-plugins-icon-container">
												<label asp-for="YearOfExperience" class="form-label "></label>
												<textarea rows="3" asp-for="YearOfExperience" class="form-control form-control-solid" placeholder="Enter years of experience">
												</textarea>
												<span asp-validation-for="YearOfExperience" class="text-danger"></span>
											</div>

											<hr class=" border-gray-800 w-100">

											<div class="mt-4">
												<h2 class="text-lg font-medium mb-4">Education & Training</h2>
												<div class="mb-5 fv-row fv-plugins-icon-container">
													<label asp-for="Education" class="form-label "></label>
													<textarea rows="3" asp-for="Education" class="form-control form-control-solid" placeholder="Enter education details">
													</textarea>
													<span asp-validation-for="Education" class="text-danger"></span>
												</div>
												<div class="mb-5 fv-row fv-plugins-icon-container">
													<label asp-for="Certifications" class="form-label "></label>
													<textarea rows="3" asp-for="Certifications" class="form-control form-control-solid" placeholder="Enter certifications">
													</textarea>
													<span asp-validation-for="Certifications" class="text-danger"></span>
												</div>
											</div>

											<hr class=" border-gray-800 w-100">

											<div class="mt-4">
												<h2 class="text-lg font-medium mb-4">
													Department & Position
												</h2>
												<div class="row g-5">
													<div class="col-md-6 mb-5 fv-row fv-plugins-icon-container">
														<label class="form-label" asp-for="DepartmentId"></label>
														<select asp-for="DepartmentId" asp-items="Model.DepartmentSelectList" class="form-select form-select-solid" data-control="select2" data-placeholder="Select department">
															<option value=""></option>
														</select>
														<span asp-validation-for="DepartmentId" class="text-danger"></span>
													</div>
													<div class="col-md-6 mb-5 fv-row fv-plugins-icon-container">
														<label asp-for="Position" class="form-label "></label>
														<input asp-for="Position" class="form-control form-control-solid" placeholder="Enter Position">
														<span asp-validation-for="Position" class="text-danger"></span>
												</div>
												</div>
											</div>
										</div>
									</div>
									<!--end::Card header-->
								</div>
								<!--end::Inventory-->
							</div>
							<div class="d-flex justify-content-between mt-5">
								<button type="button" id="btnBackToPersonal" class="btn btn-light">Back</button>
								<button type="button" id="btnToAccountSettings" class="btn btn-primary">Next</button>
							</div>
						</div>
						<!--end::Tab pane-->
						<!--begin::Tab pane-->
						<div class="tab-pane fade" id="add_doctor_AccountSettings" role="tab-panel">
							<div class="d-flex flex-column gap-7 gap-lg-10">
								<!--begin::Inventory-->
								<div class="card card-flush py-4">
									<!--begin::Card header-->
									<div class="card-header">
										<div class="card-title">
											<h2>Details</h2>
										</div>
									</div>
									<!--end::Card header-->
									<!--begin::Card body-->
									<div class="card-body pt-0">
										<div class="card-body p-0">
											<div class="row">
												<div class="col-md-6 mb-5 fv-row fv-plugins-icon-container">
													<label asp-for="UserName" class="form-label"></label>
													<input asp-for="UserName" class="form-control form-control-solid" placeholder="Enter username">
													<span asp-validation-for="UserName" class="text-danger" />
												</div>
												<div class="col-md-6 mb-5 fv-row fv-plugins-icon-container">
													<label asp-for="Password" class="form-label"></label>
													<input asp-for="Password" class="form-control form-control-solid" placeholder="Enter temporary password">
													<span asp-validation-for="Password" class="text-danger" />
												</div>
											</div>
											<div class="mb-5 fv-row fv-plugins-icon-container">
												<label asp-for="Email" class="form-label"></label>
												<input asp-for="Email" class="form-control form-control-solid" placeholder="Enter email">
												<span class="text-gray-700">This will be used for login and notifications.</span>
												<span asp-validation-for="Email" class="text-danger" />
											</div>

										</div>
									</div>
									<!--end::Card header-->
								</div>
								<!--end::Inventory-->
							</div>
							<div class="d-flex justify-content-between mt-5">
								<button type="button" id="btnBackToProfessional" class="btn btn-light">Back</button>
								<button type="submit" class="btn btn-success">Submit</button>
							</div>

						</div>
						<!--end::Tab pane-->

					</div>
					<!--end::Tab content-->
				</div>
				<!--end::Main column-->
			</form>
			<!--end::Doctor-->

		</div>

	</div>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/create-doctor.js"></script>
}
